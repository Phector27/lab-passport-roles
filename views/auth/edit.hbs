<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-5">

            <h1>Edit a user</h1>

            <form method="POST" action="/private/{{userDet.id}}">

                <div class="form-group">
                    <label>Username</label>
                    <input type="text" class="form-control" name="username" value="{{userDet.username}}">
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="text" class="form-control" name="password" value="{{userDet.password}}">
                </div>

                <div class="form-group">
                    <label>Role</label>
                    <input type="text" class="form-control" name="role" value="{{userDet.role}}">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Edit NOW!</button>
                
            </form>
        </div>
    </div>

</div>